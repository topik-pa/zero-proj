-
  let prod = process.env.NODE_ENV === 'production'
  let proj_name = 'zero-project.net'
  let proj_tagline = 'Un progetto di test'
  let description = 'A description...'
  let proj_url = 'https://www.zero-project.net'
  let copy = 2023
  let owner = 'Marco Pavan'
  let logo = 'https://www.tradingradar.net/assets/images/logo.png'
  let fbAppId = 238576103449837
  let googleSiteVerification = '#'
  let sc_project = 12345
  let sc_security = 'xxxxx'  
  let GATagId = 'UA-123456789-1'

doctype html
html
  head
    block meta 
      meta(charset="utf-8")
      meta(name="google-site-verification" content=googleSiteVerification)
      meta(property="fb:app_id" content=fbAppId)
      meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
      meta(name="author" content=owner)
      link(rel="shortcut icon", href="/public/favicon.ico", type="image/x-icon")
    if prod
      script. 
        if (window.location.protocol == 'http:') window.location.protocol = 'https:'
    script. 
      if (localStorage.getItem('dark')) document.documentElement.classList.add('dark')
    if prod
        link(rel="stylesheet", type="text/css", href="/dist/main.css")
    else
        link(rel="stylesheet", type="text/css", href="/styles/style.css")
  body(id=id)
    include ../components/shared/header/header.pug
    main
      block main
    block footer
      include ../components/shared/footer/footer.pug
      include ../components/shared/cookie_layer/cookie_layer.pug
      include ../components/shared/goto_top/goto_top.pug
    if prod
      script(src='/dist/main.js')
    else
      script(src='/scripts/index.js', type='module')
    if prod
      div(id="fb-root")
      script(async defer crossorigin="anonymous" src=("https://connect.facebook.net/it_IT/sdk.js#xfbml=1&version=v17.0&appId=" + fbAppId + "&autoLogAppEvents=1") nonce="P480iIy1")
      script.
        var sc_project = #{sc_project};
         var sc_invisible = 1;
         var sc_security = "#{sc_security}";
      script. 
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', "#{GATagId}");
      script(async, defer, src='https://www.statcounter.com/counter/counter.js')
      script(async, defer, src="https://www.googletagmanager.com/gtag/js?id=" + GATagId)
      script(type='application/ld+json').
          {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "url": "#{proj_url}",
            "name": "#{proj_name}",
            "description": "#{description}",
            "image": "#{logo}",
            "author": {
              "@type": "Person",
              "name": "#{owner}"
            },
            "copyrightHolder": {
              "@type": "Person",
              "name": "#{owner}"
            }
          }

